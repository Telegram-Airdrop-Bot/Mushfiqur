# Main SPA redirect - handle all routes
/*    /index.html   200

# Admin panel routes - ensure they're handled by the SPA
/admin    /index.html   200
/admin/*  /index.html   200

# Auth routes - ensure they're handled by the SPA
/auth     /index.html   200
/auth/*   /index.html   200

# API routes (if any) - redirect to your backend
/api/*    https://your-backend-url.com/api/:splat   301

# Security headers for admin routes
/admin/*  /index.html   200
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

# Handle 404s gracefully
/*    /index.html   404 